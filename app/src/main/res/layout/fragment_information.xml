<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/information"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.information.inforFragment">


    <TextView
        android:id="@+id/text_email"
        android:layout_width="204dp"
        android:layout_height="43dp"
        android:layout_marginEnd="20dp"
        android:text="TextView"
        android:textSize="28sp"
        app:layout_constraintBottom_toTopOf="@+id/text_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.84" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="80dp"
        android:layout_height="42dp"

        android:layout_marginStart="68dp"
        android:text="이메일"
        android:textSize="28sp"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.84" />

    <TextView
        android:id="@+id/text_name"
        android:layout_width="100dp"
        android:layout_height="42dp"
        android:layout_marginBottom="80dp"
        android:text="TextView"
        android:textSize="28sp"
        app:layout_constraintBottom_toTopOf="@+id/button_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.24"
        app:layout_constraintStart_toEndOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="57dp"
        android:layout_height="42dp"

        android:layout_marginStart="88dp"
        android:layout_marginBottom="80dp"
        android:text="이름"
        android:textSize="28sp"
        app:layout_constraintBottom_toTopOf="@+id/button_password"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_password"
        android:layout_width="220dp"
        android:layout_height="68dp"
        android:layout_marginBottom="49dp"
        android:backgroundTint="@color/yellow"
        android:text="비밀번호변경"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/button_compliment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        ></Button>

    <Button
        android:id="@+id/button_compliment"
        android:layout_width="169dp"
        android:layout_height="68dp"
        android:layout_marginBottom="80dp"
        android:backgroundTint="@color/yellow"
        android:text="칭찬음성"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent">
        >
    </Button>

</androidx.constraintlayout.widget.ConstraintLayout>